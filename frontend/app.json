{
  "expo": {
    "name": "BailaGo",
    "slug": "bailago",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "bailago",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#E91E63"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ag4ma.bailago",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "BailaGo utilizza la fotocamera per scattare foto profilo e degli eventi.",
        "NSPhotoLibraryUsageDescription": "BailaGo accede alla galleria per selezionare foto profilo e degli eventi.",
        "NSLocationWhenInUseUsageDescription": "BailaGo utilizza la posizione per mostrarti eventi nelle vicinanze."
      }
    },
    "android": {
      "package": "com.ag4ma.bailago",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E91E63"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#E91E63"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "BailaGo utilizza la posizione per mostrarti eventi nelle vicinanze."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "YOUR_EAS_PROJECT_ID"
      }
    },
    "owner": "ag4ma"
  }
}
